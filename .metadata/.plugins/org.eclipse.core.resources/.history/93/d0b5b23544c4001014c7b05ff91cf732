package second;

import java.awt.Dimension;
import java.time.Duration;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class Lab_1 {

	public static void main(String[] args) throws InterruptedException {
		
	
	WebDriver dr = new ChromeDriver();
	
	// opening lms website
	dr.get("https://school.moodledemo.net/");
	
	//fetching current url
	String sr = dr.getCurrentUrl();
	System.out.println(sr);
	
	// fetching current page title  
	String Title = dr.getTitle();
	System.out.println(Title);
	
	// fetching source code 
	String source = dr.getPageSource();
	System.out.println(source);
	Thread.sleep(Duration.ofSeconds(3));

	// navigating to login page
	dr.navigate().to("https://school.moodledemo.net/login/index.php");
//	dr.get("https://school.moodledemo.net/login/index.php");
	Thread.sleep(Duration.ofSeconds(3));

	// neviagting back to home page 
	dr.navigate().back();
	Thread.sleep(Duration.ofSeconds(3));
	
	// Navigating forward to login page 
	dr.navigate().forward();
	Thread.sleep(Duration.ofSeconds(3));
	
	//fetching 
	dr.navigate().to("https://school.moodledemo.net/mod/page/view.php?id=46");
	
	//Refreshing current page 
	dr.navigate().refresh();

	dr.navigate().back();

	// navigating to Lecturer page	
	dr.navigate().to("https://school.moodledemo.net/mod/page/view.php?id=45");
	Thread.sleep(Duration.ofSeconds(3));
	
	dr.navigate().back();
	
	dr.navigate().to("https://school.moodledemo.net/calendar/view.php?view=month");
	Thread.sleep(Duration.ofSeconds(3));

	
	
//	 // Window function 
	
    // opening full screen 
	dr.manage().window().fullscreen();
	
	// maximize screen 
	dr.manage().window().maximize();
	
	// minimize screen 
	dr.manage().window().minimize();
	
	// get position and size
	dr.manage().window().getPosition();
	dr.manage().window().getSize();
	
	// set position and size
//	dr.manage().window().setPosition(new Dimension(400,500));
	
	
	
	
	
	
	
	
	
	
	dr.quit();
	
	
	}
}
